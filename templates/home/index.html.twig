{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Welcome to RD Temp's app !</h1>
        {% if app.user %}
        <h2>You are logged as {{ username }}. <a href="{{ path('app_logout') }}">Logout</a></h2>
        {% else %}
        <h2>Please login by clicking here: <a href="{{ path('app_login') }}">Login</a></h2>
        {% endif %}
    </div>
{% endblock %}
