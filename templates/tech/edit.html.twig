{% extends 'base.html.twig' %}

{% block body %}
    <div class="example-wrapper">
        {% if isedited == false %}
            <h1>Edit {{ tech.username }}</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input class="button" type="submit" value="edit tech"/>
            {{ form_end(form) }}
            {% if is_granted('ROLE_ADMIN') %}
                <button onclick="window.location.href = '{{ path('app_tech_list') }}'">Back to tech list</button>
            {% elseif is_granted('ROLE_TECH') %}
                <button onclick="window.location.href = '{{ path('app_home_index') }}'">Back to Home</button>
            {% endif %}
        {% else %}
            <h1>The tech {{ tech.username }} has been edited! âœ…</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <button onclick="window.location.href = '{{ path('app_tech_list') }}'">Back to tech list</button>
            {% elseif is_granted('ROLE_TECH') %}
                <button onclick="window.location.href = '{{ path('app_home_index') }}'">Back to Home</button>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
